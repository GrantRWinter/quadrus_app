<div class="container">
  <h1>Enter Your contact details to confirm your order.</h1>

  <%= simple_form_for([@car, @order], html: { class: "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :customer_first_name, "First Name: ", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
      <%= f.text_field :customer_first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :customer_last_name, "First Name: ", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
      <%= f.text_field :customer_last_name, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2">
        <%= f.button :submit, class: "submit-button btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
