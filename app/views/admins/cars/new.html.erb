<div class="container">
  <h1>Enter New Car Details</h1>

  <%= simple_form_for([:admins, @car], html: { class: "form-horizontal directUpload",
    data: { 'form-data' => (@s3_direct_post.fields),
    'url' => @s3_direct_post.url,
    'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>

    <div class="form-group">
      <%= f.label :make, "Car Make:", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :make, class: "form-control " %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :model, "Car Model:", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :model, class: "form-control " %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control " %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price:", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :price, class: "form-control " %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image:", class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="form-group">

      <div class="col-sm-offset-2 col-sm-10">
        <%= f.input :available, as: :boolean, checked_value: true, unchecked_value: false %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2">
        <%= f.button :submit, class: "submit-button btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
