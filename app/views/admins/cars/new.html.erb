<style>

.progress {
  max-width: 600px;
  margin:    0.2em 0 0.2em 0;
}

.progress .bar {
  height:  1.2em;
  padding-left: 0.2em;
  color:   white;
  display: none;
}
</style>

<%= form_for([:admins, @car], html: { class: "input-group directUpload",
data: { 'form-data' => (@s3_direct_post.fields),
'url' => @s3_direct_post.url,
'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>

  Car Make : <%= f.text_field :make %><br>
  Car Model: <%= f.text_field :model %><br>
  Car Description<%= f.text_field :description %><br>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <%= f.button :submit %>
<% end %>

